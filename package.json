{
  "name": "agent-automatizado",
  "version": "1.0.0",
  "description": "Sistema portable y automatizado para generar entornos de trabajo con agentes IA, skills y MCP servers",
  "type": "module",
  "main": "src/cli.js",
  "bin": {
    "agent-auto": "./src/cli.js"
  },
  "scripts": {
    "start": "node src/cli.js",
    "new": "node src/cli.js new",
    "init": "node src/cli.js init",
    "dev": "node --watch src/cli.js",
    "validate:skills": "node scripts/validate-skills.js",
    "test:setup": "bash scripts/test-setup.sh",
    "update:context": "node scripts/update-context-recovery.cjs",
    "review:five": "node scripts/rule-of-five.cjs",
    "clean:context": "node scripts/new-conversation.cjs",
    "tokens:report": "node scripts/token-metrics.cjs report",
    "tokens:track": "node scripts/token-metrics.cjs track",
    "tokens:reset": "node scripts/token-metrics.cjs reset",
    "tokens:budget": "node scripts/token-metrics.cjs budget"
  },
  "keywords": [
    "ai",
    "agents",
    "mcp",
    "skills",
    "automation",
    "cli"
  ],
  "author": "Pablo",
  "license": "MIT",
  "dependencies": {
    "@babel/core": "^7.24.0",
    "@babel/preset-react": "^7.24.0",
    "@babel/register": "^7.24.0",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "ink": "^5.0.1",
    "ink-select-input": "^6.0.0",
    "ink-text-input": "^6.0.0",
    "inquirer": "^9.3.8",
    "js-yaml": "^4.1.1",
    "react": "^18.3.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
